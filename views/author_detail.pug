extends layout

block content

  h1 Author: #{author.name}
    if author.lifespan > 0
      |  (#[em #{author.lifespan} years old])
  p #{author.date_of_birth_formattedEU} - #{author.date_of_death_formattedEU}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in author_books
        dt 
          a(href=book.url) !{book.title}
          br
          if book.cover
            img(src=book.urlCover, alt="Book cover" height='100px')
        dd #{book.summary}

      else
        p This author has no books.

  hr

  p
    a(href=author.url+'/update') Update author

  p
    a(href=author.url+'/delete') Delete author