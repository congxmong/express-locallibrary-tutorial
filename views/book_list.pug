extends layout

block content
  h1= title

  ul
    each book in book_list
      li
        a(href=book.url) !{book.title}
        |  (#{book.author.name})
        
        br
        if book.cover
          img(src=book.urlCover, alt="Book cover" height='100px')
        p !{book.summary}

    else
      li There are no books.